public Piece checkSpot(int x, int y)
{
	ArrayList(Piece) 1 = Player1.getPieces();
	
	for(int i = 0; i < 1.size(); i++)
	{
		if(1.get(i).getX == x && 1.get(i).getY == y)
		{
			return 1.get(i);
		}
	}
	
	ArrayList(Piece) 2 = Player2.getPieces();
	
	for(int i = 0; i < 1.size(); i++)
	{
		if(2.get(i).getX == x && 2.get(i).getY == y)
		{
			return 2.get(i);
		}
	}
	
	return void;
}

public boolean checkSpotValid(int x, int y)
{
	if(!checkSpot(x, y).equals(null))
	{
		return false;
	}
	
	return true;
}
